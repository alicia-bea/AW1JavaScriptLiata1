    var n1 = prompt("Valor 1:");
    n1 = parseInt(n1);
    
    if(n1>0)
    {
    alert("Valor positivo");
    }
    else if (n1<0)
    {
    alert("Valor negativo");
    }
    else (n1 == 0)
    {
    alert("Igual a zero");
    }
            
</script>
        
