<html>
    <head>
        <title>JavaScript-Variáveis</title>
        <meta charset= “utf-8”>


    </head>
        <body>
            <div class="fundo">
            <h1>Primeiros passos JavaScript</h1>
            <script>

    var DiaDaSemana = ["Domingo", "Segunda-feira", "Terça-feira", "Quarta-feira", "Quinta-feira", "Sexta-feira", "Sábado"]

    var numero = prompt("Digite um número de zero a 6:");
    numero = parseInt(numero);

    if (numero >= 0 && numero <= 6) {
 
  var DiaDaSemana = DiaDaSemana[numero];
  alert("O número " + numero + " corresponde a " + DiaDaSemana);
  } 
  else 
  {
   alert("Número fora do intervalo válido (0 a 6).");
  }
    
   
            
</script>
        
    </div>
</body>
